<div class="main users-login">
	<div class="container">
		<div class="title">
			<h2>ログイン</h2>
		</div>
		<div class="form users-form">
			<div class="form-body">
				<% if @error_message %>
					<div class="error">
						<%= @error_message %>
					</div>
				<% end %>
				<%= form_tag("/login") do %>
					<p>メールアドレス</p>
					<input name="email" value="<%= @email %>">

					<p>パスワード</p>
					<input type="password" name="password" value="<%= @password %>">
					<p><input type="submit" value="ログイン"></p>
				<% end %>
			</div>
		</div>
	</div>
</div>