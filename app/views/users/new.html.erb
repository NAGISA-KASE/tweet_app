<!-- 新規登録ページ -->
<div class="main users-new">
	<div class="container">
		<div class="title">
			<h2>新規登録</h2>
		</div>
		<div class="form users-form">
			<div class="form-body">
				<% @user.errors.full_messages.each do |message| %>
					<div class="error">
						<%= message %>
					</div>
				<% end %>
				<%= form_tag("/users/create") do %>
					<p>名前</p>
					<p class="attention">※16文字以内。名前は後から変更できます。</p>
					<input name="name" value="<%= @user.name %>">
					<p>アカウント名</p>
					<p class="attention">※半角英数字14文字以内。 「@アカウント名」となります。</p>
					<input name="account_name" value="<%= @user.account_name %>">
					<p>メールアドレス</p>
					<input  name="email" value="<%= @user.email %>">
					<p>パスワード</p>
					<input type="password" name="password" value="<%= @user.password %>">
					<p><input type="submit" value="新規登録"></p>
				<% end %>
			</div>
		</div>
	</div>
</div>